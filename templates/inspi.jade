extends ./layout.jade

block style
  style
    include css/inspi.css

block content
  section.hero
    .hero-content
      .container
        h1.title ひらめけ
        form(action="/result" method="POST")
          .themes
            .main_theme
              p #{main_theme}
              input(type="hidden" name="main_theme" value=main_theme)
            .cross ×
            span.select
              select.select.condara-select(name="sub_theme")
                each word in words
                  option #{word}
          p.control
            textarea.textarea.condara-textarea(name="inspiration" placeholder="input your inspiration!")
          .submit
            p.control
              button.button.is-primary ひらめいた!
  
  .condara-inspi #{word_to_inspi}
  script
    include js/inspi.js
