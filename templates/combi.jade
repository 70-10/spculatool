extends ./layout.jade

block style
  style
    include css/combi.css
      
block content
  section.hero
    .hero-content
      .container
        h1.title 
          span あと
          span.count #{words.length}
          span こ
  
  section.hero
    .hero-content
      .container
        h1.title #{main_theme}
  form(action="/rest" method="POST")
    input(type="hidden" name="word_count" value=words.length)
    section.section
      center
        button.button.is-centered.is-disabled.combi-button 全部いれた！
    .container
      ul
        each word in words
          li
            h4.subtitle.is-4.is-left
              span.tag.is-large #{word.dataValues.word}
            p.control.is-grouped
              a.button.is-info
                span ×
                span  #{main_theme}
                span  ＝
              input.input.is-half(name=word.id type="text" placeholder="アイデアをいれろ")
              input(type="hidden" name="#{word.id}_word" value=word.dataValues.word)
          br
    section.section
      center
        button.button.is-centered.is-disabled.combi-button 全部いれた！
    script
      include js/combi.js
